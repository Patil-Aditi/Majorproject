<% layout("/layout/boilerplate") %>

    <div class="row mt-3">
        <div class="alert alert-danger col-6 offset-3" role="alert">
            <h4 class="alert-heading">Error <%= err.statusCode || 500 %>
            </h4>
            <p><strong>Message:</strong>
                <%= err.message %>
            </p>
            <% if (err.stack) { %>
                <pre><%= err.stack %></pre>
                <% } %>
        </div>
    </div>